@model courseProject.Models.Service
@{
    ViewData["Title"] = Model.ServicesId == 0 ? "Создание услуги" : "Редактирование услуги";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-@(Model.ServicesId == 0 ? "plus-circle" : "edit") me-2"></i>
        @ViewData["Title"]
    </h1>
</div>

<div class="card">
    <div class="card-body p-4">
        <form asp-action="@(Model.ServicesId == 0 ? "Create" : "Edit")">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            @if (Model.ServicesId != 0)
            {
                <input type="hidden" asp-for="ServicesId" />
            }

            <div class="mb-3">
                <label asp-for="ServicesTitle" class="form-label"></label>
                <input asp-for="ServicesTitle" class="form-control" placeholder="Введите название услуги" />
                <span asp-validation-for="ServicesTitle" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Категория</label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Цена (₽)</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Подробное описание услуги..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> @(Model.ServicesId == 0 ? "Создать" : "Сохранить")
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary back-link">
                    <i class="fas fa-arrow-left me-2"></i> Назад к списку
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}