@model IEnumerable<courseProject.Models.Service>
@{
    ViewData["Title"] = "Услуги";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h1 class="page-title"><i class="fas fa-cogs me-2"></i> Услуги</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> Добавить услугу
    </a>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Описание</th>
                    <th>Категория</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.ServicesTitle</strong></td>
                        <td><span class="text-success fw-bold">@item.Price ₽</span></td>
                        <td>@item.Description</td>
                        <td><span class="badge-category">@item.Category.CategoryTitle</span></td>
                        <td class="text-center action-links">
                            <a asp-action="Edit" asp-route-id="@item.ServicesId" class="edit">
                                <i class="fas fa-edit"></i> Изменить
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ServicesId" class="details">
                                <i class="fas fa-eye"></i> Подробнее
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>