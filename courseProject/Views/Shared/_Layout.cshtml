<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - courseProject</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Кастомные стили -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/courseProject.styles.css" asp-append-version="true" />

    <style>
        :root {
            --primary: #000000;
            --primary-hover: #222222;
            --danger: #b30000;
            --success: #222222;
            --gray: #7a7a7a;
            --light: #ffffff;
            --dark: #111111;
            --bg-gradient: linear-gradient(180deg, #ffffff 0%, #f7f7f7 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-gradient);
            color: var(--dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* === НАВИГАЦИЯ === */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.08);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            padding: 0.75rem 0;
            transition: all 0.3s ease;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
        }

        .navbar.scrolled {
            padding: 0.5rem 0;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary) !important;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .navbar-brand i {
            font-size: 1.6rem;
            color: var(--primary);
        }

        .navbar-brand:hover {
            color: var(--primary-hover) !important;
        }

        .nav-link {
            font-weight: 500;
            color: var(--dark) !important;
            padding: 0.5rem 1rem !important;
            border-radius: 12px;
            transition: all 0.3s ease;
            position: relative;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-link i {
            font-size: 1.1rem;
            opacity: 0.7;
        }

        .nav-link:hover,
        .nav-link.active {
            color: var(--primary) !important;
            background: rgba(67, 97, 238, 0.1);
        }

        .nav-link.active {
            font-weight: 600;
        }

        /* === КОНТЕНТ === */
        main {
            padding-top: 80px;
        }

        .main-content {
            flex: 1;
            padding: 2rem 0;
        }

        .container {
            max-width: 1200px;
        }

        /* === ФУТЕР === */
        footer {
            background: white;
            border-top: 1px solid rgba(0, 0, 0, 0.08);
            padding: 1.5rem 0;
            margin-top: auto;
            font-size: 0.9rem;
            color: var(--gray);
        }

        footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        footer a:hover {
            text-decoration: underline;
        }

        /* === МОДАЛ АВТОРИЗАЦИИ === */
        .auth-buttons {
            display: flex;
            gap: 0.75rem;
            align-items: center;
            margin-left: auto;
        }

        .user-menu {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        .user-info {
            font-size: 0.9rem;
            color: var(--dark);
        }

        .user-role {
            font-size: 0.75rem;
            color: var(--gray);
            font-weight: 500;
        }

    </style>
</head>
<body>
    <!-- НАВИГАЦИЯ -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap"></i> Financial Solutions
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Home" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "ServiceCategories" ? "active" : "")"
                               asp-area="" asp-controller="ServiceCategories" asp-action="Index">
                                <i class="fas fa-tags"></i> Категории
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Services" ? "active" : "")"
                               asp-area="" asp-controller="Services" asp-action="Index">
                                <i class="fas fa-cogs"></i> Услуги
                            </a>
                        </li>

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Requests" asp-action="Create">
                                    <i class="fas fa-paper-plane"></i> Оставить заявку
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#authModal">
                                    <i class="fas fa-paper-plane"></i> Оставить заявку
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Кнопка авторизации справа -->
                    <div class="auth-buttons" id="authContainer">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#authModal">
                            <i class="fas fa-sign-in-alt me-2"></i> Вход
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @* Demo credentials hint *@
    <div class="container mt-3">
        <div class="alert alert-secondary alert-dismissible fade show small" role="alert">
            <div>
                Demo accounts: Админ — <strong>admin@local / Admin123!</strong>;
                Клиент — <strong>client@local / Client123!</strong>.
                Используйте их для тестирования (токен JWT выдаётся через /api/user/auth/login).
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <!-- МОДАЛ АВТОРИЗАЦИИ -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content auth-modal">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title" id="authModalLabel">Авторизация</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Выбор роли -->
                    <div class="mb-4">
                        <label class="form-label">Вы авторизируетесь как:</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="role" id="roleUser" value="user" checked>
                            <label class="btn btn-outline-dark" for="roleUser">
                                <i class="fas fa-user me-2"></i>Пользователь
                            </label>

                            <input type="radio" class="btn-check" name="role" id="roleAdmin" value="admin">
                            <label class="btn btn-outline-dark" for="roleAdmin">
                                <i class="fas fa-shield-alt me-2"></i>Администратор
                            </label>
                        </div>
                    </div>

                    <form id="authForm">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text input-icon"><i class="fas fa-envelope"></i></span>
                                <input type="email" class="form-control" id="email" placeholder="example@mail.com" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Пароль</label>
                            <div class="input-group">
                                <span class="input-group-text input-icon"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="password" placeholder="••••••••" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark w-100">
                            <i class="fas fa-sign-in-alt me-2"></i> Войти
                        </button>
                    </form>

                    <hr class="my-3">

                    <p class="text-center text-muted mb-0">Нет аккаунта? 
                        <a href="#" data-bs-toggle="modal" data-bs-target="#registerModal" data-bs-dismiss="modal" class="link-dark">Зарегистрироваться</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- МОДАЛ РЕГИСТРАЦИИ -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content auth-modal">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title" id="registerModalLabel">Регистрация</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="registerForm">
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Полное имя</label>
                            <div class="input-group">
                                <span class="input-group-text input-icon"><i class="fas fa-id-card"></i></span>
                                <input type="text" class="form-control" id="fullName" placeholder="Иван Иванов" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="regEmail" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text input-icon"><i class="fas fa-envelope"></i></span>
                                <input type="email" class="form-control" id="regEmail" placeholder="example@mail.com" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="regPassword" class="form-label">Пароль</label>
                            <div class="input-group">
                                <span class="input-group-text input-icon"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="regPassword" placeholder="••••••••" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark w-100">
                            <i class="fas fa-user-plus me-2"></i> Зарегистрироваться
                        </button>
                    </form>

                    <hr class="my-3">

                    <p class="text-center text-muted mb-0">Уже есть аккаунт? 
                        <a href="#" data-bs-toggle="modal" data-bs-target="#authModal" data-bs-dismiss="modal" class="link-dark">Войти</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- ОСНОВНОЙ КОНТЕНТ -->
    <div class="main-content">
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- ФУТЕР -->
    <footer>
        <div class="container text-center">
            &copy; 2025 - <strong>courseProject</strong> -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
        </div>
    </footer>

    <!-- СКРИПТЫ -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Инициализация авторизации при загрузке
        document.addEventListener('DOMContentLoaded', () => {
            updateAuthUI();
        });

        // Обновление UI в зависимости от состояния авторизации
        function updateAuthUI() {
            const token = localStorage.getItem('authToken');
            const userEmail = localStorage.getItem('userEmail');
            const userRole = localStorage.getItem('userRole');
            const authContainer = document.getElementById('authContainer');

            if (token) {
                authContainer.innerHTML = `
                    <div class="user-menu">
                        <div>
                            <div class="user-info">${userEmail}</div>
                            <div class="user-role">${userRole === 'admin' ? '🛡️ Администратор' : '👤 Пользователь'}</div>
                        </div>
                        <a class="btn btn-outline-primary btn-sm ms-2" href="/Account/Profile">
                            <i class="fas fa-user-circle me-1"></i> Профиль
                        </a>
                        ${userRole === 'admin' ? `<a class="btn btn-outline-secondary btn-sm ms-2" href="/Admin/Requests"><i class="fas fa-tools me-1"></i> Админ</a>` : ''}
                        <button class="btn btn-outline-danger btn-sm ms-2" onclick="logout()">
                            <i class="fas fa-sign-out-alt me-2"></i> Выход
                        </button>
                    </div>
                `;
            } else {
                authContainer.innerHTML = `
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#authModal">
                        <i class="fas fa-sign-in-alt me-2"></i> Вход
                    </button>
                `;
            }
        }

        // Функция выхода
        async function logout() {
            try {
                await fetch('/api/user/auth/logout', { method: 'POST', credentials: 'include' });
            } catch (e) {
                console.warn('Logout request failed', e);
            }
            localStorage.removeItem('authToken');
            localStorage.removeItem('userEmail');
            localStorage.removeItem('userRole');
            localStorage.removeItem('userFullName');
            updateAuthUI();
            alert('✔️ Вы вышли из системы');
        }

        // Плавная прокрутка + сжатие навбара
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Обработка формы авторизации
        document.getElementById('authForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const role = document.querySelector('input[name="role"]:checked').value;
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;

            if (!email || !password) {
                alert('❌ Пожалуйста, заполните все поля');
                return;
            }

            try {
                const response = await fetch('/api/user/auth/login', {
                    method: 'POST',
                    credentials: 'include', // important: accept/set cookie
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password })
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    localStorage.setItem('authToken', data.token);
                    localStorage.setItem('userEmail', email);
                    if (data.user) {
                        localStorage.setItem('userFullName', data.user.fullName || '');
                        localStorage.setItem('userRole', data.user.role || role);
                    } else {
                        localStorage.setItem('userRole', role);
                    }
                    
                    alert('✅ Успешная авторизация!');
                    bootstrap.Modal.getInstance(document.getElementById('authModal')).hide();
                    
                    document.getElementById('authForm').reset();
                    updateAuthUI();
                    
                    // Перенаправление на главную страницу через 500ms
                    setTimeout(() => window.location.href = '/', 500);
                } else {
                    alert('❌ ' + (data.message || 'Неверный email или пароль'));
                }
            } catch (error) {
                console.error('Ошибка:', error);
                alert('❌ Ошибка при авторизации. Проверьте подключение.');
            }
        });

        // Обработка формы регистрации
        document.getElementById('registerForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const fullName = document.getElementById('fullName').value.trim();
            const email = document.getElementById('regEmail').value.trim();
            const password = document.getElementById('regPassword').value;

            if (!fullName || !email || !password) {
                alert('❌ Пожалуйста, заполните все поля');
                return;
            }

            if (password.length < 6) {
                alert('❌ Пароль должен быть не менее 6 символов');
                return;
            }

            try {
                const response = await fetch('/api/user/auth/register', {
                    method: 'POST',
                    credentials: 'include',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password, fullName, role: 'accountant' })
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    // sign-in already performed server-side (cookie), store token & user
                    localStorage.setItem('authToken', data.token);
                    if (data.user) {
                        localStorage.setItem('userFullName', data.user.fullName || '');
                        localStorage.setItem('userEmail', data.user.email || '');
                        localStorage.setItem('userRole', data.user.role || 'accountant');
                    }

                    alert('✅ Регистрация успешна! Вы вошли в систему.');
                    bootstrap.Modal.getInstance(document.getElementById('registerModal')).hide();
                    document.getElementById('registerForm').reset();
                    updateAuthUI();
                } else {
                    alert('❌ ' + (data.message || 'Ошибка при регистрации'));
                }
            } catch (error) {
                console.error('Ошибка:', error);
                alert('❌ Ошибка регистрации. Проверьте подключение.');
            }
        });

        // Функция для добавления токена к запросам (с credentials)
        async function fetchWithAuth(url, options = {}) {
            const token = localStorage.getItem('authToken');
            const headers = options.headers || {};
            
            if (token) {
                headers['Authorization'] = `Bearer ${token}`;
            }
            
            return fetch(url, { ...options, headers, credentials: 'include' });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>