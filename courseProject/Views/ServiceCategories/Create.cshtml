@model courseProject.Models.ServiceCategory
@{
    ViewData["Title"] = "Создание категории";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-plus-circle me-2"></i> Создание категории
    </h1>
</div>

<div class="card">
    <div class="card-body p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="CategoryTitle" class="form-label">Название категории</label>
                <input asp-for="CategoryTitle" class="form-control" placeholder="Введите название категории"/>
                <span asp-validation-for="CategoryTitle" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> Создать
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i> К списку
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
