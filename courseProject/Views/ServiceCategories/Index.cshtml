@model IEnumerable<courseProject.Models.ServiceCategory>
@{
    ViewData["Title"] = "Категории услуг";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h1 class="page-title"><i class="fas fa-tags me-2"></i> Категории услуг</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> Добавить категорию
    </a>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Название категории</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.CategoryTitle</strong></td>
                        <td class="text-center action-links">
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="edit">
                                <i class="fas fa-edit"></i> Изменить
                            </a>
                            <a asp-action="Details" asp-route-id="@item.CategoryId" class="details">
                                <i class="fas fa-eye"></i> Подробнее
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
